    <script>
        const qtyup = document.querySelectorAll('.qtyup')
        const qtydown = document.querySelectorAll('.qtydown')
        const qtyval = document.querySelectorAll('.qtyval')
        const stock = document.querySelectorAll('.stock')
        console.log(stock)
        qtyup.forEach(el=>{
            console.log(stock)
            el.addEventListener('click',async ()=>{
                const pid = el.dataset.proid
                const currentcon = el.closest('.detail-qty') 
                const currentqty = parseInt(currentcon.querySelector('.qtyval').innerHTML)
                const stock = el.dataset.stock
                console.log(stock,"ff"+currentqty)
                if(currentqty + 1 <= stock){
                let funcdata = await increment(pid)
               if(funcdata){
                const currentcont = el.closest('.detail-qty') 
                const currentval = parseInt(currentcont.querySelector('.qtyval').innerHTML)
                const currentPrice = parseInt(document.querySelector(`.pprice${pid}`).innerHTML)
                console.log(currentPrice)
                const currentTotal = document.querySelector(`.cost${pid}`)
                const total = currentPrice * (currentval + 1)
                currentTotal.innerHTML = "Rs."+total
                currentcont.querySelector('.qtyval').innerHTML = currentval + 1
                console.log(total)
                const subtotal = parseInt(document.getElementById('subtotal').innerHTML.split('.')[1])
                const newTotal = subtotal + currentPrice
                document.getElementById('subtotal').innerHTML = `Rs.${newTotal}`
                const grandTotal = parseInt(document.getElementById('total').innerHTML.split('.')[1])
                const newGrandTotal = currentPrice + grandTotal
                document.getElementById('total').innerHTML = `Rs.${newGrandTotal}`
               }
                }
               
            })
        })
        qtydown.forEach(el=>{
            el.addEventListener('click',async ()=>{
                const currentcon = el.closest('.detail-qty') 
                const currentqty = parseInt(currentcon.querySelector('.qtyval').innerHTML)
                const pid = el.dataset.proid
               if(currentqty - 1 >= 1){
                let funcdata = await decrement(pid)
               if(funcdata){
                const currentcont = el.closest('.detail-qty') 
                const currentval = parseInt(currentcont.querySelector('.qtyval').innerHTML)
                const currentPrice = parseInt(document.querySelector(`.pprice${pid}`).innerHTML)
                console.log(currentPrice)
                const currentTotal = document.querySelector(`.cost${pid}`)
                const total = currentPrice * (currentval - 1)
                currentTotal.innerHTML = total
                currentcont.querySelector('.qtyval').innerHTML = currentval - 1
                console.log(total)
                const subtotal = parseInt(document.getElementById('subtotal').innerHTML.split('.')[1])
                const newTotal = subtotal - currentPrice
                document.getElementById('subtotal').innerHTML = `Rs.${newTotal}`
                const grandTotal = parseInt(document.getElementById('total').innerHTML.split('.')[1])
                const newGrandTotal =  grandTotal - currentPrice 
                document.getElementById('total').innerHTML = `Rs.${newGrandTotal}`
               }}
            })
        })
        
        function increment(id){
            console.log('increment')
           return fetch(`/increment?id=${id}`,{
                method:'POST',
                headers:{
                    'Content-Type':'application/json',
                }
            })
            .then(Response=>{
                
                return Response.json()
            })
            .then(data=>{
                console.log(data.success)
                if(data.success){
                    return true
                }
            })
            .catch(error=>{
                console.log(error)
            })
        }

        function decrement(id){
            console.log('decrement')
           return fetch(`/decrement?id=${id}`,{
                method:'POST',
                headers:{
                    'Content-Type':'application/json',
                }
            })
            .then(Response=>{
                
                return Response.json()
            })
            .then(data=>{
                console.log(data.success)
                if(data.success){
                    return true
                }
            })
            .catch(error=>{
                console.log(error)
            })
        }
        function couponApply(){
            
            const couponApplied = document.getElementById('coupon').value
            console.log(couponApplied)
            return fetch(`/couponApply?coupon=${couponApplied}`,{
                method:'POST',
                headers:{
                    'Content-Type':'application/json',
                },
            })
            .then(response => {
                window.location.reload();
                console.log(response);
            })
            .catch(error => {
                // Handle errors
                console.error('Error:', error);
            });
        }

        function copyCoupon(couponCode) {
            // Create a temporary input element
            var tempInput = document.createElement('input');

            // Set the input value to the coupon code
            tempInput.value = couponCode;

            // Append the input element to the document
            document.body.appendChild(tempInput);

            // Select the input value
            tempInput.select();
            tempInput.setSelectionRange(0, 99999); // For mobile devices

            // Copy the selected text to the clipboard
            document.execCommand('copy');

            // Remove the temporary input element
            document.body.removeChild(tempInput);
            alert('Coupon code ' + couponCode + ' copied to clipboard!');
        }
        function removeCoupon(){
            let remove_Coupon = document.getElementById('applied-coupon').textContent
            return fetch(`/couponRemove`,{
                method:'POST',
                headers:{
                    'Content-Type':'application/json',
                },
            })
            .then(response => {
                // Handle the response if needed
                window.location.reload();
                console.log(response);
            })
            .catch(error => {
                // Handle errors
                console.error('Error:', error);
            });
        }
    </script>
