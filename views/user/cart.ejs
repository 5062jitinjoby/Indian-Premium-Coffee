        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table shopping-summery text-center clean">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Subtotal</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%if(cart){%>
                                        <%if(cart.products.length>0){%>
                                            <%locals.cart.products.forEach(item=>{%>
                                                <tr>
                                                    <td class="image product-thumbnail"><img src="/uploads/<%=item.productID.image[0]%>" alt="#"></td>
                                                    <td class="product-des product-name">
                                                        <h5 class="product-name"><a href=""><%= item.productID.ProductName%></a></h5>
                                                    </td>
                                                    <%if(item.productID.offerPrice!=0){%>
                                                        <td class="price" data-title="Price"><span class="pprice<%= item.productID._id%>"><%= item.productID.offerPrice%></span></td>
                                                    <%}
                                                    else{%>
                                                        <td class="price" data-title="Price"><span class="pprice<%= item.productID._id%>"><%= item.productID.price%></span></td>
                                                    <%}%>
                                                    <td class="text-center" data-title="Stock">
                                                        <div class="detail-qty border radius  m-auto">
                                                            <button class="qtyup" data-proid='<%= item.productID._id%>' data-stock="<%=item.productID.quantity%>"><i class="fi-rs-angle-small-up"></i></button>
                                                            <span class="qtyval"><%= item.quantity%></span>
                                                            <!-- <input type="hidden" class="stock" data-stock="<%item.productID.quantity%>"> -->
                                                            <button class="qtydown" data-proid='<%= item.productID._id%>'><i class="fi-rs-angle-small-down"></i></button>
                                                        </div>
                                                    </td>
                                                    <td class="text-right" data-title="Cart">
                                                        <span class="cost<%= item.productID._id%>">Rs.<%= item.cost%> </span>
                                                    </td>
                                                    <td class="action" data-title="Remove"><a href="/cart/deleteItem?id=<%= item.productID._id%>" class="text-muted"><i class="fi-rs-trash"></i></a></td>
                                                </tr>
                                            <%})%>
                                        <% } else { %>
                                                <tr>
                                                    <td colspan="6" class="text-center">Your cart is empty.</td>
                                                </tr>
                                            <% } %>
                                            <tr>
                                                <td colspan="6" class="text-end">
                                                    <a href="#" class="text-muted"> <i class="fi-rs-cross-small"></i> Clear Cart</a>
                                                </td>
                                            </tr>
                                   
                                    
                                    <%}else { %>
                                        <tr>
                                            <td colspan="6" class="text-center">Your cart is empty.</td>
                                        </tr>
                                    <% } %>   
                                </tbody>
                            </table>
                        </div>
                        <!-- <div class="cart-action text-end">
                            <a class="btn  mr-10 mb-sm-15"><i class="fi-rs-shuffle mr-10"></i>Update Cart</a>
                            <a class="btn "><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
                        </div> -->
                        <div class="divider center_icon mt-50 mb-50"></div>
                        <div class="row mb-50">
                            <!-- Coupons Section -->
                            <div class="col-lg-6 col-md-12">
                                <div class="heading_s1 mb-3">
                                    <h4>Coupons</h4>
                                </div>
                                <!-- Coupon Listing -->
                                <!-- Inside the body or a card container -->
                                <div class="card">
                                    <div class="card-body">
                                        <div class="coupon-list mb-30" style="max-height: 200px; overflow-y: auto;">
                                            <% if (coupons) { %>
                                                <% coupons.forEach(coupon => { %>
                                                    <!-- Inside the Coupon Listing section -->
                                                    <div class="coupon-item">
                                                        <div class="coupon-code-container">
                                                            <span class="coupon-code"><%= coupon.couponCode %></span>
                                                            <p class="coupon-details">Min Purchase : Rs.<%= coupon.minAmount%> Discount: Rs.<%= coupon.discountPrice%></p>
                                                            <button class="btn btn-sm copy-coupon" onclick="copyCoupon('<%= coupon.couponCode %>')">Copy</button>
                                                        </div>
                                                        
                                                    </div>
                                                    <!-- Add more coupons as needed -->
                                                <% }) %>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>

                                <!-- Apply Coupon Form -->
                                <% if(cart) { %>
                                    <%if(cart.products.length>0){%>
                                        <div class="mb-30 mt-50">
                                            <div class="heading_s1 mb-3">
                                                <h4>Apply Coupon</h4>
                                            </div>
                                            <div class="total-amount">
                                                <div class="left">
                                                    <div class="coupon">
                                                            <div class="form-row row justify-content-center">
                                                                <div class="form-group col-lg-6">
                                                                    <input class="font-medium" name="Coupon" id="coupon" placeholder="Enter Your Coupon">
                                                                </div>
                                                                <div class="form-group col-lg-6">
                                                                    <button class="btn btn-sm" onclick="couponApply()"><i class="fi-rs-label mr-10"></i>Apply</button>
                                                                </div>
                                                            </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <%}%>
                                <%}%>
                            </div>
                        
                            <% if(cart) { %>
                                <%if(cart.products.length>0){%>
                                    <!-- Cart Totals Section -->
                                    <div class="col-lg-6 col-md-12">
                                        <div class="border p-md-4 p-30 border-radius cart-totals">
                                            <div class="heading_s1 mb-3">
                                                <h4>Cart Totals</h4>
                                            </div>
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <tbody>
                                                        <tr>
                                                            <td class="cart_total_label">Cart Subtotal</td>
                                                            <td class="cart_total_amount"><span class="font-lg fw-900 text-brand" id="subtotal">Rs.<%= cart.subTotal %></span></td>
                                                        </tr>
                                                        <!-- Coupon Applied Section -->
                                                        <% if(cart.coupon){ %>
                                                            <tr id="coupon-applied-row">
                                                                <td class="cart_total_label">Coupon Applied</td>
                                                                <td class="cart_total_amount">
                                                                    <span class="font-lg fw-900 text-brand" id="applied-coupon">-Rs.<%= cart.coupon.discountPrice %></span>
                                                                    <!-- Add Remove Button -->
                                                                    <button class="btn btn-sm btn-danger" onclick="removeCoupon()">Remove</button>
                                                                </td>
                                                            </tr>
                                                        <% }
                                                        else { %>
                                                            <tr id="coupon-applied-row">
                                                                <td class="cart_total_label">Coupon Applied</td>
                                                                <td class="cart_total_amount">
                                                                    <span class="font-lg fw-900 text-brand" id="applied-coupon">-</span>
                                                                </td>
                                                            </tr>
                                                        <% } %>
                                                        <tr>
                                                            <td class="cart_total_label">Shipping</td>
                                                            <td class="cart_total_amount"><i class="ti-gift mr-5"></i> Free Shipping</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="cart_total_label">Total</td>
                                                            <td class="cart_total_amount"><strong><span class="font-xl fw-900 text-brand" id="total">Rs.<%= cart.billTotal %></span></strong></td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div> 
                                            <a href="/checkout" class="btn "><i class="fi-rs-box-alt mr-10"></i> Proceed To CheckOut</a>
                                        </div>
                                    </div>
                                <% } %> 
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
