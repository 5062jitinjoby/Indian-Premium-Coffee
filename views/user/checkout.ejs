    <script>
            const billAddress = document.querySelectorAll('.billAddress')
            const paymentMethod = document.querySelectorAll('.paymentMethod')
            const total_Amount = document.getElementById('total').textContent
            const total_Price = parseInt(total_Amount)
            let payment_Gateway;
            let addressId;
        function validateCheckout(event){
            console.log(paymentMethod)
            const payment=Array.from(paymentMethod)
            console.log(payment);
            let paymentStatus = false;
            let addressStatus = false;
            payment.forEach(el=>{
               if(el.checked){
                    paymentStatus = true;
                    payment_Gateway = el.value;
               }
               else{
                 event.preventDefault()
               }     
            })
            billAddress.forEach(el=>{
                if(el.checked){
                    addressStatus = true;
                    addressId = el.value
                    sendOrderData(addressId, payment_Gateway, total_Amount);
                }else{
                    event.preventDefault()
                }
            })
                       
        }
        function sendOrderData(addressId, paymentGateway, totalAmount) {
            console.log('placeorder');
            console.log(addressId, paymentGateway, totalAmount)    
            fetch('/createOrder', {
                method:'POST', 
                headers: {
                    'Content-Type': 'application/json',   
                },
                body:JSON.stringify({addressId,paymentGateway,totalAmount})
            })
            .then(respone => respone.json())
            .then(data=>{
                if (data.paymentMethod == 'Razorpay') {
                    console.log('pay')
                    razorpay(data.order);
                }
                else if(data.paymentMethod == 'COD'){
                    window.location.href = `/orderPlaced?aid=${addressId}&payment=${data.paymentMethod}`
                }
                else{
                    console.error("Unsupported Payment")
                }
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
                // Handle errors appropriately
            });
        }
        function razorpay(order){
            console.log('orderpay')
            var options = {
                "key": "rzp_test_Q5p8yCd0Ar1jaI", // Enter the Key ID generated from the Dashboard
                "amount": total_Price*100, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
                "currency": "INR",
                "name": "Indian Premium Coffee", //your business name
                "description": "Test Transaction",
                "image": "https://example.com/your_logo",
                "order_id": order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
                "handler": function (response){
                    alert(response.razorpay_payment_id);
                    alert(response.razorpay_order_id);
                    alert(response.razorpay_signature)
                    verifyPayment(response,order)
                },
                "prefill": { //We recommend using the prefill parameter to auto-fill customer's contact information, especially their phone number
                    "name": "Gaurav Kumar", //your customer's name
                    "email": "gaurav.kumar@example.com", 
                    "contact": "9000090000"  //Provide the customer's phone number for better conversion rates 
                },
                "notes": {
                    "address": "Razorpay Corporate Office"
                },
                "theme": {
                    "color": "#3399cc"
                }
            };
            var rzp1 = new Razorpay(options);
            rzp1.open();
        }
        function verifyPayment(payment,order){
            console.log('verify')
            $.ajax({
                url:'/verify-payment',
                data:{
                    payment,
                    order
                },
                method:'POST',
                success: function(respone){
                    payment_Status(respone);
                }
            })
            
        }
        function payment_Status(respone){
            if(respone.status == true){
                console.log('place razorpay')
                window.location.href = `/orderPlaced?aid=${addressId}&payment=${payment_Gateway}`
            }
        }

    </script>
