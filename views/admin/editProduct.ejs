    <script>
        async function imgdlt(imgid,proid){
            try {
                const res = await fetch(`/admin/editproduct/removeimage?imgid=${imgid}&proid=${proid}`)
                const data = await res.json()
                if(data){
                    console.log(data)
                    if(data.success){
                        window.location.reload()
                    }
                }else{

                }
            } catch (error) {
                console.log(error.message)
            }
        }
        const crossbtn = document.querySelectorAll('.crossbtn')
        crossbtn.forEach(el=>{
            el.addEventListener('click',()=>{
                console.log(el.dataset.imgid,el.dataset.proid)
                imgdlt(el.dataset.imgid,el.dataset.proid)
            })
        })
    </script>
