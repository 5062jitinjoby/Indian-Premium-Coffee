                                    <div class="col-md-3">
                                        <h6>7. Media</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">Images</label>
                                            <input type="file" id="imginput" onchange="validateImage()" name="images" multiple>
                                            <span class="error text tex-danger"  id="imageError"></span>
                                            <% for(let image of product.image){%>
                                                <div class="left">
                                                    <img src="/uploads/<%= image%>" class="img-lg"  alt="Item">
                                                    <div class="crossbtn" data-imgid="<%= image%>" data-proid="<%= product._id %>">&times;</div>    
                                                </div>
                                            <%} %>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- .row end// -->
                                <div class="d-grid">
                                    <button class="btn btn-primary">Update</button>
                                </div>
                            </form>
                            <span class="text-danger" id="submitError"> </span>
                        </div>
                    </div>
